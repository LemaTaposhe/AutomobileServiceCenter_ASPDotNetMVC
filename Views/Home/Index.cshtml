            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Appoint", "Index", "Appoint", new { area = "" }, new { @class = "nav-link" })
